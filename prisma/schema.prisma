// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  PROFESSOR
}

model User {
  id           String @id @default(uuid())
  name         String
  username     String
  email        String @unique
  passwordHash String @map("password_hash")
  role         Role

  @@map("users")
}
